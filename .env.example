# Backend Environment Variables (Server-side only, never exposed to client)
GEMINI_API_KEY=your_gemini_api_key_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Gmail OAuth (Optional - if not set, app will use mock email data)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:3001/api/auth/gmail/callback

# Frontend Environment Variables (Will be bundled into client code)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_API_URL=http://localhost:3001

# Optional Configuration
PORT=3001
CLIENT_URL=http://localhost:5173
